<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
       .tab1
       {
           float:right;
       }
       .tab2
       {
           float:right;
       }
       .tab3
       {
           float:right;
       }

    </style>

</head>
<body>
    
    <div class="topnav">
        <a class="active" href="#kiwilabs">Kiwilabs</a>
        <a href="#news">News</a>
        <a href="#about">About</a>
        <a href="#contacs">Contacs</a>

        @{
            // ToDo: Cookie check for is logged in
            HttpCookie cookie_islogged = Request.Cookies["isLoggedIn"];

            if (cookie_islogged == null || cookie_islogged.Value == "False")
            {
                <div class="tab1">@Html.ActionLink("Sign Up", "SignUp", "Home")</div>
                <div class="tab2">@Html.ActionLink("Sign In", "SignIn", "Home")</div>
            }
            else if (cookie_islogged.Value != "False")
            {
                <div class="tab3">@Html.ActionLink("Sign Out", "Index", "Home")</div>
                Response.Cookies["isLoggedIn"].Expires = DateTime.Now.AddDays(-1);
            }


        }

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
