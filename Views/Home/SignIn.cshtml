        margin-bottom:10px;

    }

    #pw1 {
        padding: 8px;
        background-color: #e0e0e0;
        border: 1px solid black;
        border-radius: 21px;
        margin-bottom:20px;
        
    }

    #btn_login {
        padding: 10px;
        background-color: #2fcc00;
        border-radius: 21px;
        border: 1px solid black;
        margin-left: 8rem;
    }

